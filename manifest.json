{
    "name": "Lychee",
    "id": "lychee",
    "description": {
        "en": "Self-hosted photo-management done right",
        "fr": "Gestionnaire de photos autohebergÃ©"
    },
    "developer": {
        "name": "titoko",
        "email": "titoko@titoko.fr",
        "url": "http://dev.yunohost.org"
	},
    "multi_instance": false,
    "services": [
        "nginx",
        "mysql"
    ],
    "requirements": {
        "yunohost": ">= 2.6.4"
	},
    "arguments": {
        "install" : [
        {
            "name": "domain",
            "ask": {
                "en": "Choose a domain for Lychee"
            },
            "example": "domain.org"
        },
        {
            "name": "path",
            "ask": {
                "en": "Choose a path for lychee"
            },
            "example": "/lychee",
            "default": "/lychee"
        },
        {
            "name": "admin_user",
            "ask": {
                "en": "Choose login of  admin user"
            },
            "example": "johndoe",
            "default": "admin"
        },
        {
            "name": "admin_pwd",
            "ask": {
                "en": "Choose password for admin user"
            }
        }
        ]
    }
}
